{
  "metadata": [
    {
      "src": [
        {
          "files": [
            "**.csproj"
          ],
          "src": "../../src"
        }
      ],
      "dest": "api",
      "disableGitFeatures": false,
      "disableDefaultFilter": false
    }
  ],
    "build": {
        "content": [
            {
                "files": [
                    "api/**.yml",
                    "api/index.md"
                ]
            },
            {
                "files": [
                    "articles/**.md",
                    "articles/**/toc.yml",
                    "toc.yml",
                    "*.md"
                ]
            }
        ],
        "resource": [
            {
                "files": [
                    "images/**"
                ]
            }
        ],
        "overwrite": [
            {
                "files": [
                    "apidoc/**.md"
                ],
                "exclude": [
                    "obj/**",
                    "_site/**"
                ]
            }
        ],
        "dest": "../../docs",
        "globalMetadataFiles": [],
        "fileMetadataFiles": [],
        "template": [
            "default"
        ],
        "postProcessors": [],
        "markdownEngineName": "markdig",
        "noLangKeyword": false,
        "keepFileLink": false,
        "cleanupCacheHistory": false,
        "disableGitFeatures": false,
        "useCompatibilityFileName": false,
        "properties": {
            "TargetFramework": "netstandard21"
        },
        "globalMetadata": {
            "_appTitle": "API Documentation",
            "_appFooter": "Copyright &copy; 2019 <a href='mailto:jevans@open-collar.org.uk'>Jonathan Evans</a>",
            "_appLogoPath": "./images/opencollar-icon-48x96x32.png",
            "_enableSearch": true,
            "_enableNewTab": true,
            "_gitUrlPattern": "github",
            "_gitContribute": {
                "repo": "https://github.com/open-collar/OpenCollar.Extensions.Configuration.git",
                "branch": "master",
                "apiSpecFolder": "docs-ref-overwrite"
            }
        }
    }
}